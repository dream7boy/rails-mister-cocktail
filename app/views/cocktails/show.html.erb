<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> - <%= dose.description %>
        <%= link_to "Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </li>

    <% end %>
  </ul>

  <%= render "doses/form" %>

  <p>
    <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %>
  </p>
  <p>
    <%= link_to "Back to lists", cocktails_path %>
  </p>
</div>
