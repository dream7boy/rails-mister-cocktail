<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> - <%= dose.description %></li>

    <% end %>
  </ul>
  <p>
    <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %>
  </p>
  <p>
    <%= link_to "Back to lists", cocktails_path %>
  </p>
</div>
