<div class="container" id="cocktail">
  <h1><%= @cocktail.name %></h1>
    <div class="text-center">
      <% if @cocktail.photo? %>
       <%= cl_image_tag @cocktail.photo.path, width: 400, height: 400, crop: :fill %>
      <% end %>
      <p><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %></p>
    </div>

  <ul class="text-center">
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> - <%= dose.description %>
        <%= link_to "x", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </li>

    <% end %>
  </ul>

  <%= render "doses/form" %>

  <p>
    <%= link_to "Back to lists", cocktails_path %>
  </p>
</div>
